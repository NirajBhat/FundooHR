<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#F0EDEA"
        android:id="@+id/engineer_card_data"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="4dp"
        android:layout_width="286dp"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="10dp"
            android:layout_width="102dp"
            android:layout_height="99dp"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="#3B5372"
            android:maxLines="1"
            android:id="@+id/name_engineer"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FellowShip"
            android:maxLines="1"
            android:id="@+id/fellow_engineer"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bridgelabz"
                android:id="@+id/company_engineer"
                android:maxLines="1"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile_no"
                android:id="@+id/mob_engineer"
                android:maxLines="1"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/email_engineer"
                android:maxLines="1"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>